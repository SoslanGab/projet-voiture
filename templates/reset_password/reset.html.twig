{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<!-- Page Content--> 
<section class="section section-bg" id="call-to-action" style="background-image: url({{ asset('assets/images/voitures/banner-image-1-1920x500.jpg') }})">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <h2>Réinitialiser votre mot de passe</h2>
                    <p>Veuillez entrer un nouveau mot de passe pour réinitialiser votre compte.</p>
                    <div class="container mt-5">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="card" style="font-family: 'Poppins', sans-serif;">
                                    <div class="card-body">
                                        {{ form_start(resetForm) }}
                                            <div class="form-group">
                                                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
                                                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(resetForm.plainPassword) }}
                                            </div>
                                            <button class="btn" style="background-color: #ed563b; color: white;">Réinitialiser le mot de passe</button>
                                        {{ form_end(resetForm) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

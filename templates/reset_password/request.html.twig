{# templates/reset_password/request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Demander une réinitialisation du mot de passe{% endblock %}

{% block body %}
<!-- Page Content--> 
<section class="section section-bg" id="call-to-action" style="background-image: url({{ asset('assets/images/voitures/banner-image-1-1920x500.jpg') }})">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <h2>Réinitialiser votre mot de passe</h2>
                    <p>Veuillez entrer votre adresse e-mail pour recevoir un lien de réinitialisation du mot de passe.</p>
                    <div class="container mt-5">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="card" style="font-family: 'Poppins', sans-serif;">
                                    <div class="card-body">
                                   
                                        {{ form_start(requestForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                                            <button type="submit" class="btn" style="background-color: #ed563b; color: white;">Envoyer le lien de réinitialisation</button>
                                        {{ form_end(requestForm) }}
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

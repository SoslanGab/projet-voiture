   <!-- ***** Filtre ***** -->
        <section class="section" id="trainers">
            <div class="container">
                <br>
                <br>
                <div class="contact-form">
                    <form action="{{ path('app_voitures') }}" method="get" id="contact">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Marque:</label>
                                    <select name="marque">

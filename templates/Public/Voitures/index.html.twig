    <!-- ***** Filtre ***** -->


<!-- ***** Nos Voitures ***** -->
<section class="section" id="trainers">
    <div class="container">
        <div class="col-lg-12 offset-lg-3 mx-auto">
            <div class="section-heading">
                <h2>nos <em>voitures</em></h2>
                <p>Voici nos voitures disponibles en location</p>
            </div>
        </div>
        <div class="row">
            {% for voiture in voitures %}
                <div class="col-lg-4 mx-auto">
                    <div class="trainer-item">
                        <div class="image-thumb">
                            {% if voiture.imageVoitures|length > 0 %}
                               
                                {{ dump(voiture.imageVoitures[0].url) }}
                                <img src="{{ asset( voiture.imageVoitures[0].url ?? "not found" ) }}" alt="{{ voiture.marque }} {{ voiture.modele }}">
                            {% else %}
                                
                                {{ dump('Image par défaut') }}
                                <img src="{{ asset('assets/images/logo-banner/banner_voitures.png') }}" alt="Image par défaut">
                            {% endif %}
                        </div>
                        <div class="down-content">
                            <h4>{{ voiture.marque }} {{ voiture.modele }}</h4>
                            <p>
                                <i class="fa fa-cog"></i> {{ voiture.couleur}}
                                <i class="fa fa-euro"></i> {{ voiture.type}}
                            </p>
                            <ul class="social-icons">
                                <li><a href="{{ path('app_details', {'id': voiture.id}) }}">+ Voir la voiture</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br>
    </div>
</section>
<!-- ***** Nos Voitures ***** -->

